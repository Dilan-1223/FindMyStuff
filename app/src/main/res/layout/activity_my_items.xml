<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyItems">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E8E3F3">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Back"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="16dp" />
            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Items"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#4A5AE8" />

        </LinearLayout>

        <!-- Filter Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingTop="8dp">

            <!-- First Row Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_all"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="All"
                    android:textColor="@color/white"
                    android:background="@drawable/filter_button_selected"
                    android:paddingHorizontal="24dp"
                    android:layout_marginEnd="12dp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_resolved"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Resolved"
                    android:textColor="#666666"
                    android:background="@drawable/filter_button_unselected"
                    android:paddingHorizontal="24dp"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

        <!-- Second Row Filter Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/btn_lost"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Lost"
                android:textColor="#666666"
                android:background="@drawable/filter_button_unselected"
                android:paddingHorizontal="24dp"
                android:layout_marginEnd="12dp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_found"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Found"
                android:textColor="#666666"
                android:background="@drawable/filter_button_unselected"
                android:paddingHorizontal="24dp"
                android:textAllCaps="false" />

        </LinearLayout>

        <!-- Items List Section -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Item Card -->
                <LinearLayout
                    android:id="@+id/item_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/item_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <!-- Red Status Indicator -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#FF4444"
                        android:layout_marginEnd="16dp" />

                    <!-- Item Icon -->
                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸ“‡"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:background="@drawable/icon_background"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Item Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Iphone 12 Pro"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <!-- Status and Time -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LOST"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#FF4444"
                            android:background="@drawable/status_badge_background"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 Hours ago"
                            android:textSize="12sp"
                            android:textColor="#999999" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="16dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_nav_home"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon_home"
                    android:contentDescription="Home" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_nav_chat"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon_chat"
                    android:contentDescription="Chat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_nav_profile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon_person"
                    android:contentDescription="Profile" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>